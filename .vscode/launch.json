{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net7.0/BBCodeInterpreter.dll",
            "args": [ "--pause-end" ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "externalTerminal",
            "env": {
                "DOTNET_ROOT": "${env.USERPROFILE}\\dotnet7",
                "PATH": "${env.USERPROFILE}\\dotnet7;${env.PATH}",
                "DOTNET_MULTILEVEL_LOOKUP": "0",
            }
        }
    ]
}
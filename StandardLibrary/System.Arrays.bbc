using Primitives;

template<T>
export inline int binary_search(T[]* values, T element, int length)
{
    return binary_search(values, element, 0, length - 1);
}

template<T>
export int binary_search(T[]* values, T element, int left, int right)
{
    while (left < right)
    {
        int middle = left + ((right - left) / 2);
        T value = values[middle];
        if (value == element)
        {
            return middle;
        }
        else if (value < element)
        {
            left = middle;
        }
        else
        {
            right = middle;
        }
    }
    return -1;
}

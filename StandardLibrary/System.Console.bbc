}

export string readline()
{
    string result = "";
    while (1)
    {
        char inpChar = readkey();
        if (inpChar == '\n') { break; }
        if (inpChar == '\r') { break; }

        result = (temp result) + inpChar;
    }

    print('\n');
    return result;
}

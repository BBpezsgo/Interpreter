template<T>
export void print(List<T>* list)
{
	if (!list)
	{
		print("{ }");
		return;
	}
	
    int length = list.length();

	if (!length)
	{
		print("{ }");
		return;
	}
	
	print("{ ");
	
    for (int i = 0; i < length; i++)
    {
        if (i > 0)
        { print(", "); }

        print(list[i]);
    }

	print(" }");
}

template<T>
export void print(T[]* list, int length)
{
	if (!list)
	{
		print("{ }");
		return;
	}
	
	if (!length)
	{
		print("{ }");
		return;
	}
	
	print("{ ");
	
    for (int i = 0; i < length; i++)
    {
        if (i > 0)
        { print(", "); }

        print(list[i]);
    }

	print(" }");
}


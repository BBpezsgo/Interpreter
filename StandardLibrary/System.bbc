export int ParseInt(temp char* v)
{
    if (v.IsNullOrEmpty())
    { return 0; }

    bool IsNegative = (v[0] == '-');
    temp char* parsing = v;

    if (IsNegative)
    {
        parsing = parsing.Substring(1);
        char* reversed = parsing.Reverse();
        delete parsing;
        parsing = reversed;
    }
    else
    {
        parsing = parsing.Reverse();
    }

    int result = 0;
    for (int i = 0; parsing[i]; i++)
    {
        char digit = parsing[i];
        result += (Pow(10, i) * (digit - '0'));
    }

    if (IsNegative)
    { result *= -1; }

    return result;
}


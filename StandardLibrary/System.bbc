[Define("boolean")]
enum bool
{
    false = 0,
    true = 1,
}

export char* ToString(this bool v)
{
    if (v) { return "true"; }
    else { return "false"; }
}

export char* ToString(this byte number)
{
	if (number == 0)
    { return "0"; }

	char* result = "";

	byte v = number;

	while (v > 0)
	{
        byte rem = v % 10;
        result = (temp result) + ((rem + 48) as char);
		v = v / 10;
	}

	char* reversed = result.Reverse();
	delete result;

	return reversed;
}

export char* ToString(this int number)
{
	if (number == 0)
    { return "0"; }
    
	char* result = "";

	int v = number;

	bool isNegative = v < 0;
	if (isNegative)
	{ v = 0 - v; }

	while (v > 0)
	{
        int rem = v % 10;
        result = (temp result) + ((rem + 48) as char);
		v = v / 10;
	}

    if (isNegative)
    {
        char* newResult = Alloc((result.Length() + 1) * sizeof(char)) as char*;
		CopyString(result, newResult);
        newResult[result.Length()] = '-';
        delete result;
        result = newResult;
    }

	char* reversed = result.Reverse();
	delete result;

	return reversed;
}

[External("sleep")]

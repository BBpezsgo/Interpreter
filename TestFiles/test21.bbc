macro void InputChar(ref char input) {
	input = IN;
	out input;
}

macro void InputByte(ref byte input) {
	char _char = IN;
	out _char;

	int result = 0;

	while (_char - '\r') {
		result = result * 10;
		result += _char - 48;
		
		_char = IN;
		if (_char - '\r')
		{
			out _char;
		};
	};

	input = result;
}

int input = 0;
InputByte(ref input);
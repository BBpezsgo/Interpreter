using System;

void InputChar(ref char input) {
	input = ReadKey();
	Print(input);
}

void InputByte(ref byte input) {
	char _char = ReadKey();

	byte result = 0;

	while (_char != '\r') {
		result = (result * 10) as byte;
		result += (_char - 48) as byte;
		
		_char = ReadKey();
	};

	input = result;
}

byte input = 0;
InputByte(ref input);